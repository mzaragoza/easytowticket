.span8.widget
  .widget-header
    %span.title Ticket Summary
    .toolbar
      .btn-group
        = link_to edit_admins_ticket_path(ticket), class: 'btn' do
          %i.icol-pencil
  .widget-content.table-container
    %table.table.table-striped.table-detail-view
      %thead
        %tr
          %th{colspan: "2"}
            %i.icol-exclamation
            = ticket.identification
      %tbody
        %tr
          %th= t(:created_by)
          %td= ticket.created_by.name
        %tr
          %th= t(:created_by)
          %td= ticket.created_by.name
        %tr
          %th= t(:created_at)
          %td= ticket.created_at.in_time_zone(current_account.time_zone).strftime('%D %r')
        %tr
          %th= t(:driver)
          %td= ticket.driver.name if ticket.driver
        -#%tr
          %th= t(:truck)
          %td= ticket.truck.name if ticket.truck
        %tr
          %th= t(:location_of_viecle)
          %td= ticket.location_of_viecle
        %tr
          %th= t(:id)
          %td= ticket.id
        %tr
          %th= t(:name)
          %td= ticket.name
        %tr
          %th= t(:phone)
          %td= ticket.phone
        %tr
          %th= t(:address)
          %td
            = ticket.address
            = ticket.address2
            = ticket.city
            = ticket.state
            = ticket.zip
        %tr
          %th= t(:license_number)
          %td= ticket.license_number
        %tr
          %th= t(:service)
          %td
            %strong Start 
            #{ticket.service_time_start.in_time_zone(current_account.time_zone).strftime('%D %r')}
            %br
            %strong Finish 
            #{ticket.service_time_finish.in_time_zone(current_account.time_zone).strftime('%D %r')}
            %br
            %strong Hours 
            #{ticket.service}
        %tr
          %th= t(:extra_truck)
          %td
            %strong Start 
            #{ticket.extra_truck_start.in_time_zone(current_account.time_zone).strftime('%D %r')}
            %br
            %strong Finish 
            #{ticket.extra_truck_finish.in_time_zone(current_account.time_zone).strftime('%D %r')}
            %br
            %strong Hours 
            #{ticket.extra}
        %tr
          %th= t(:milleage)
          %td
            %strong Start 
            #{ticket.milleage_start}
            %br
            %strong Finish 
            #{ticket.milleage_finish}
            %br
            %strong= t(:miles) 
            #{ticket.milleage}
        %tr
          %th= t(:car)
          %td
            %strong Year
            = ticket.car_year
            %br
            %strong Make
            = ticket.car_make
            %br
            %strong Model
            = ticket.car_model
            %br
            %strong Color
            = ticket.car_color
            %br
        %tr
          %th= t(:vin_number)
          %td= ticket.vin_number
        %tr
          %th= t(:tag_number)
          %td= ticket.tag_number
        %tr
          %th= t(:type_of_service)
          %td
            - if ticket.sling
              .badge.badge-info= t(:sling)
            - if ticket.hoist_tow
              .badge.badge-info= t(:hoist_tow)
            - if ticket.wheel_lift
              .badge.badge-info= t(:wheel_lift)
            - if ticket.flad_bed
              .badge.badge-info= t(:flad_bed)
            - if ticket.start
              .badge.badge-info= t(:start)
            - if ticket.lock_out
              .badge.badge-info= t(:lock_out)
            - if ticket.flat_tire
              .badge.badge-info= t(:flat_tire)
            - if ticket.out_of_gas
              .badge.badge-info= t(:out_of_gas)
            - if ticket.wreck
              .badge.badge-info= t(:wreck)
            - if ticket.recovery
              .badge.badge-info= t(:recovery)
            - unless ticket.other.empty?
              .badge.badge-info= t(:other) + ' ' + ticket.other
        %tr
          %th= t(:special_equipment)
          %td
            - if ticket.special_equipment_single_line_winching
              .badge.badge-info= t(:single_line_winching)
            - if ticket.special_equipment_dual_line_winching
              .badge.badge-info= t(:dual_line_winching)
            - if ticket.special_equipment_snatch_blocks
              .badge.badge-info= t(:snatch_blocks)
            - if ticket.special_equipment_single_line_winching
              .badge.badge-info= t(:single_line_winching)
            - if ticket.special_equipment_scotch_blocks
              .badge.badge-info= t(:scotch_blocks)
            - if ticket.special_equipment_dolly
              .badge.badge-info= t(:dolly)
            - unless ticket.other.empty?
              .badge.badge-info= t(:other) + ' ' + ticket.special_equipment_other
        %tr
          %th= t(:tow_destination)
          %td= ticket.tow_destination
        %tr
          %th= t(:operators_comments)
          %td= ticket.operators_comments
        %tr
          %th= t(:status)
          %td= ticket.status
        %tr
          %th= t(:updated_at)
          %td= ticket.updated_at.in_time_zone(current_account.time_zone).strftime('%D %r')
        %tr
          %th= t(:on_hold)
          %td
            - if ticket.on_hold
              .badge.badge-info= t(:on_hold)
