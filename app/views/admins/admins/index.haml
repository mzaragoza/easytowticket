.span12.widget
  .widget-header
    %span.title 
      = link_to 'Add', new_admins_admin_path, class: 'btn'
      Admins / Drivers
  .widget-content.table-container
    %table#demo-dtable-01.table.table-striped
      %thead
        %tr
          %th
          %th= t(:email)
          %th= t(:name)
          %th= t(:address)
          %th= t(:phone)
          %th= t(:active)
          %th= t(:is_admin)
          %th= t(:is_driver)
          %th= t(:start_date)
          %th= t(:end_date)
      %tbody
        - admins.each do |a|
          %tr
            %td= link_to 'Show', admins_admin_path(a), class: 'btn'
            %td= mail_to a.email
            %td= a.name
            %td= a.full_address
            %td= number_to_phone(a.phone)
            %td= a.active
            %td= a.is_admin
            %td= a.is_driver
            %td= a.start_date
            %td= a.end_date
