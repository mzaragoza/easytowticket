.span12.widget
  .widget-header
    %span.title Active Drivers
  .widget-content.table-container
    %table#demo-dtable-01.table.table-striped
      %thead
        %tr
          %th
          %th= t(:email)
          %th= t(:name)
          %th= t(:phone)
          %th= t(:tickets)
          %th= t(:last_tickets)
      %tbody
        - admins.each do |a|
          %tr
            %td= link_to 'Show', admins_admin_path(a), class: 'btn'
            %td= mail_to a.email
            %td= a.name
            %td= number_to_phone(a.phone)
            %td= a.tickets.count
            %td
              = a.tickets.last.address if a.tickets.count > 0
